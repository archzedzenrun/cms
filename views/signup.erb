<form action="/users/signup", method="post">
  <p>
  <label for="signup_name">Username:</label>
    <input type="text" name="signup_name" maxlength="20" minlength="3" value="<%= params[:signup_name] %>">
  </p>
  <p>
  <label for="signup_password">Password:</label>
    <input type="password" name="signup_password" minlength="5" value="<%= params[:signup_password] %>">
  </p>
  <p>
  <label for="signup_password2">Confirm Password:</label>
    <input type="password" name="signup_password2" minlength="5" value="<%= params[:signup_password2]%>">
  </p>
  <p class="user">Password must contain: One uppercase letter, one number, and one symbol.</p>
  <input type="submit" value="Sign Up">
</form>